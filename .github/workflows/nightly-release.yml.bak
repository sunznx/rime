name: Nightly Build dicts

on:
  workflow_dispatch: # 手动触发
  push:
    branches:
      - wanxiang
    paths:
      - "dicts/**"

concurrency: # 防止并发冲突
  group: nightly-release
  cancel-in-progress: true

jobs:
  nightly-release:
    runs-on: ubuntu-22.04

    steps:
      # 1. 检出代码
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2. 检查指定文件夹或文件是否有变动
      - name: Check if dicts or wanxiang-lts-zh-hans.gram has changes
        id: check_changes
        run: |
          if git diff --quiet HEAD HEAD~1 -- dicts; then
            echo "SKIP=true" >> $GITHUB_ENV
          else
            echo "SKIP=false" >> $GITHUB_ENV
          fi
      # 3. 条件跳过任务
      - name: Skip if no changes
        if: env.SKIP == 'true'
        run: echo "No changes detected in 'dicts' or 'wanxiang-lts-zh-hans.gram'. Skipping release process."

      # 4. 安装 Python（确保我们能够调用 Python 脚本）
      - name: Setup Python
        if: env.SKIP != 'true'
        uses: actions/setup-python@v4
        with:
          python-version: "3.x"

      # 5. 运行Python 脚本对 dicts 进行处理，生成多个词库文件夹
      - name: Process Rime dicts (python) & prepare base-dicts
        if: env.SKIP != 'true'
        run: |
          set -euo pipefail

          echo "Processing dicts with Python script..."
          pip install --upgrade pip
          python .github/workflows/scripts/aux_go.py
          echo "Python done."

          # 直接用 dicts/ 作为 base-dicts 全量来源
          if [[ -d "dicts" ]]; then
            echo "Syncing ./dicts -> ./base-dicts ..."
            rm -rf base-dicts
            # 用 rsync 更快更稳；没有 rsync 也可改用 cp -a
            rsync -a --delete "dicts/" "base-dicts/"
            echo "base-dicts ready."
          else
            echo "Error: dicts folder does not exist."
            exit 1
          fi

      - name: Pack splitted dicts
        if: env.SKIP != 'true'
        run: |
          set -euo pipefail
          echo "Packing splitted dict folders..."

          mkdir -p dist

          # 按固定顺序打包；zip 名不带数字前缀
          folders=(
            "pro-moqi-fuzhu-dicts"
            "pro-flypy-fuzhu-dicts"
            "pro-zrm-fuzhu-dicts"
            "pro-tiger-fuzhu-dicts"
            "pro-wubi-fuzhu-dicts"
            "pro-hanxin-fuzhu-dicts"
            "pro-shouyou-fuzhu-dicts"
            "base-dicts"
          )

          for dict_dir in "${folders[@]}"; do
            if [[ -d "$dict_dir" ]]; then
              # 只给 pro-* 目录补通用文件；base-dicts 已是 dicts 全量，无需拷贝
              if [[ "$dict_dir" == pro-* ]]; then
                echo "Copying common files into $dict_dir ..."
                cp -f dicts/en.dict.yaml      "$dict_dir/" || true
                cp -f "dicts/cn&en.dict.yaml" "$dict_dir/" || true
                cp -f dicts/chengyu.txt       "$dict_dir/" || true
                cp -f dicts/人名.dict.yaml   "$dict_dir/" || true
              fi

              zip_name="${dict_dir}.zip"
              echo "Packing: ${zip_name}"
              zip -r -q "dist/${zip_name}" "$dict_dir"
              echo "Packed: dist/${zip_name}"
            else
              echo "Warning: $dict_dir folder does not exist. Skipped."
            fi
          done

      # 7. 删除旧的 Release 和 Tag
      - name: Delete existing Nightly Release and Tag
        if: env.SKIP != 'true'
        uses: actions/github-script@v6
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
          script: |
            const tag = "dict-nightly";
            try {
              // 检查现有的 Release
              const releases = await github.rest.repos.listReleases({
                owner: context.repo.owner,
                repo: context.repo.repo
              });
              const existingRelease = releases.data.find(r => r.tag_name === tag);
              if (existingRelease) {
                console.log(`Deleting existing Release with ID: ${existingRelease.id}`);
                await github.rest.repos.deleteRelease({
                  owner: context.repo.owner,
                  repo: context.repo.repo,
                  release_id: existingRelease.id
                });
              }

              // 删除现有的 Tag
              console.log(`Deleting tag: ${tag}`);
              await github.rest.git.deleteRef({
                owner: context.repo.owner,
                repo: context.repo.repo,
                ref: `tags/${tag}`
              });
            } catch (error) {
              console.log(`Error deleting Release or Tag: ${error.message}`);
            }

      # 8. 等待清理完成
      - name: Wait for cleanup
        if: env.SKIP != 'true'
        run: sleep 10
      # 安装 Node.js v18（为 action-gh-release 解决 node:fs::FileHandle 问题）
      - name: Setup Node.js 18
        if: env.SKIP != 'true'
        uses: actions/setup-node@v4
        with:
          node-version: "18"
      # 9. 创建新的 Release，并把上述打包好的所有文件都上传
      - name: Create new Release
        if: env.SKIP != 'true'
        uses: "softprops/action-gh-release@v2"
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          tag_name: dict-nightly
          name: "实时提交的词库更新"
          body: |
            - **base-dicts.zip**：最新的标准版原始中文词库文件
            - **pro-moqi-fuzhu-dicts.zip**：携带了墨奇辅助码的词库文件
            - **pro-flypy-fuzhu-dicts.zip**：携带了小鹤辅助码的词库文件
            - **pro-zrm-fuzhu-dicts.zip**：携带了自然码辅助码的词库文件
            - **pro-tiger-fuzhu-dicts.zip**：携带了虎码辅助码的词库文件
            - **pro-wubi-fuzhu-dicts.zip**：携带了五笔辅助码的词库文件
            - **pro-hanxin-fuzhu-dicts.zip**：携带了汉心辅助码的词库文件
            - **pro-shouyou-fuzhu-dicts.zip**：携带了首右辅助码的词库文件
            - **[wanxiang-lts-zh-hans.gram](https://github.com/amzxyz/RIME-LMDG/releases/download/LTS/wanxiang-lts-zh-hans.gram)**：与词库同步更新的语法模型
          files: |
            dist/pro-moqi-fuzhu-dicts.zip
            dist/pro-flypy-fuzhu-dicts.zip
            dist/pro-zrm-fuzhu-dicts.zip
            dist/pro-tiger-fuzhu-dicts.zip
            dist/pro-wubi-fuzhu-dicts.zip
            dist/pro-hanxin-fuzhu-dicts.zip
            dist/pro-shouyou-fuzhu-dicts.zip
            dist/base-dicts.zip
            wanxiang-lts-zh-hans.gram
          draft: false
          prerelease: false
          make_latest: true
